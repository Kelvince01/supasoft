# ============================================================================
# EditorConfig
# ============================================================================
# EditorConfig helps maintain consistent coding styles across different
# editors and IDEs. See https://editorconfig.org for more information.
# ============================================================================

# Top-most EditorConfig file
root = true

# ============================================================================
# All Files
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# ============================================================================
# Java Files
# ============================================================================
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# ============================================================================
# XML Files (POM, Spring Config, etc.)
# ============================================================================
[*.{xml,xsd,wsdl}]
indent_style = space
indent_size = 2

# ============================================================================
# YAML Files (application.yml, docker-compose.yml, etc.)
# ============================================================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# ============================================================================
# Properties Files
# ============================================================================
[*.properties]
indent_style = space
indent_size = 2
# Properties files may have trailing spaces for readability
trim_trailing_whitespace = false

# ============================================================================
# JSON Files
# ============================================================================
[*.json]
indent_style = space
indent_size = 2

# ============================================================================
# JavaScript/TypeScript Files
# ============================================================================
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# ============================================================================
# HTML Files
# ============================================================================
[*.html]
indent_style = space
indent_size = 2

# ============================================================================
# CSS/SCSS Files
# ============================================================================
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# ============================================================================
# Markdown Files
# ============================================================================
[*.md]
indent_style = space
indent_size = 2
# Markdown requires trailing spaces for line breaks
trim_trailing_whitespace = false

# ============================================================================
# Shell Scripts
# ============================================================================
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# ============================================================================
# SQL Files
# ============================================================================
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 120

# ============================================================================
# Dockerfile
# ============================================================================
[Dockerfile*]
indent_style = space
indent_size = 2

# ============================================================================
# Git Files
# ============================================================================
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# ============================================================================
# CI/CD Files
# ============================================================================
[.gitlab-ci.yml]
indent_style = space
indent_size = 2

[Jenkinsfile]
indent_style = space
indent_size = 2

# ============================================================================
# Configuration Files
# ============================================================================
[{package.json,package-lock.json,tsconfig.json}]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 4

[pom.xml]
indent_style = space
indent_size = 2

# ============================================================================
# Makefile
# ============================================================================
[Makefile]
indent_style = tab
indent_size = 4

